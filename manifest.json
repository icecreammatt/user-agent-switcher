{
  "description": "This is similar to the example but with a slightly improved UI and support for Edge.",
  "manifest_version": 2,
  "name": "user-agent-switcher",
  "version": "1.1",
  "homepage_url": "https://github.com/icecreammatt/user-agent-switcher",
  "icons": {
    "48": "icons/settings-outline.svg"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/settings-outline.svg",
    "default_title": "Choose a user agent",
    "default_popup": "popup/choose_ua.html",
    "theme_icons": [
      {
        "light": "icons/settings-outline-dark.svg",
        "dark": "icons/settings-outline.svg",
        "size": 16
      },
      {
        "light": "icons/settings-outline-dark.svg",
        "dark": "icons/settings-outline.svg",
        "size": 32
      }
    ]
  }
}